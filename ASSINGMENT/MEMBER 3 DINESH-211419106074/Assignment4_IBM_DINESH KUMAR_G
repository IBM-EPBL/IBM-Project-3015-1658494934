        "def check(msg):\n",
        "    msg=re.sub('[^a-zA-Z]',' ',msg)\n",
        "    msg=msg.lower()\n",
        "    msg=msg.split(' ')\n",
        "    msg = [ps.stem(word) for word in msg if word not in set(stopwords.words('english'))]\n",
        "    msg=' '.join(msg)\n",
        "    predict = model.predict(cv.transform([msg]))\n",
        "    if predict > 0.5:\n",
        "        prediction='Spam'\n",
        "    else: \n",
        "        prediction='Ham'\n",
        "    return prediction"
